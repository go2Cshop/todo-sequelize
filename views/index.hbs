<a href="/todos/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto me-auto">
        <input class="align-middle" type="checkbox" name="isDone" {{#if this.isDone}} checked{{/if}} disabled>
        <h4 class="d-inline ms-2 align-middle">
          {{this.name}}
        </h4>
      </div>
      <div class="col-auto">
        <a href="./todos/{{this.id}}" class="btn btn-secondary">detail</a>
        <a href="./todos/{{this.id}}/edit" class="btn btn-success">edit</a>
        <form action="./todos/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>